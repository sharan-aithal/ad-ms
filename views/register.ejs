<% include body-header.ejs %>
<div class="container py-5">
    <div class="position-relative pr-5 pl-5 h-100 w-auto">
        <div class="card">
            <article class="card-body">
                <h4 class="card-title text-center mb-4 mt-1"><%= title %></h4>
                <hr>
                <!-- p class="text-success text-center">Some message goes here</p -->
                <form action="/register" method="post">
                    <div class="form-group">
                        <label> Full Name </label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                            </div>
                            <input class="form-control" name="name" type="text" value="<%= name %>" placeholder="Enter Full Name">
                        </div> <!-- input-group.// -->
                    </div> <!-- form-group// -->
                    <div class="form-group">
                        <label> Email </label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-at"></i> </span>
                            </div>
                            <input class="form-control" name="email" type="email" value="<%= email %>" placeholder="Enter Email">
                        </div> <!-- input-group.// -->
                    </div> <!-- form-group// -->
                    <div class="form-group">
                        <label> Password </label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                            </div>
                            <input class="form-control" name="password" type="password" value="<%= password %>" placeholder="******">
                        </div> <!-- input-group.// -->
                    </div> <!-- form-group// -->
                    <div class="form-group">
                        <label> Confirm password </label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                            </div>
                            <input class="form-control" name="confpassword" type="password" value="<%= confpassword %>" placeholder="******">
                        </div> <!-- input-group.// -->
                    </div> <!-- form-group// -->
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"> Register </button>
                    </div> <!-- form-group// -->
                    <p class="text-center">
                        Already have account?
                        <a href="/login" class="btn btn-outline-primary">Login Here</a>
                    </p>
                </form>
            </article>
        </div> <!-- card.// -->
    </div> <!-- col.// -->
</div>

<% include footer.ejs %>
