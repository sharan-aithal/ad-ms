<html>
<% include ../account/navbar.ejs %>
<body>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/order">Order</a></li>
        <li class="breadcrumb-item active" aria-current="page">Details</li>
    </ol>
</nav>
<div class="container my-5">
    <h4 class="h4 text-center">Order Details</h4>
    <div class="container">

        <table class="table table-striped table-bordered table-responsive">
            <caption>View order list <a href="/order">here</a></caption>
            <tbody>
            <%
            console.log('Listing Orders ')
            if (table.length === 1) {
            %>
                <tr>
                    <th class="text-nowrap" scope="row">Order ID</th>
                    <td><%= table[0].order_id %></td>
                </tr>
                <tr>
                    <th class="text-nowrap" scope="row">User Details</th>
                    <td colspan="">
                        <table class="table-bordered">
                            <tbody>
                            <tr>
                                <th class="text-nowrap" scope="row">Name</th>
                                <td><%= table[0].name %></td>
                            </tr>
                            <tr>
                                <th class="text-nowrap" scope="row">Email</th>
                                <td><%= table[0].email %></td>
                            </tr>
                            <tr>
                                <th class="text-nowrap" scope="row">Address</th>
                                <td><%= table[0].address %></td>
                            </tr>
                            <tr>
                                <th class="text-nowrap" scope="row">Phone</th>
                                <td><%= table[0].phone %></td>
                            </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
                <tr>
                    <th class="text-nowrap" scope="row">Business Details</th>
                    <td colspan="">
                        <table class="table-bordered">
                            <tbody>
                            <tr>
                                <th class="text-nowrap" scope="row">Business Name</th>
                                <td><%= table[0].c_name %></td>
                            </tr>
                            <tr>
                                <th class="text-nowrap" scope="row">Business Email</th>
                                <td><%= table[0].c_email %></td>
                            </tr>
                            <tr>
                                <th class="text-nowrap" scope="row">Address</th>
                                <td><%= table[0].c_address %></td>
                            </tr>
                            <tr>
                                <th class="text-nowrap" scope="row">Phone</th>
                                <td><%= table[0].c_phone %></td>
                            </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
                <tr>
                    <th class="text-nowrap" scope="row">Advertisement Type</th>
                    <td><%= table[0].order_type_id %></td>
                </tr>
                <tr>
                    <th class="text-nowrap" scope="row">Ordered Date</th>
                    <td><%= table[0].order_time %></td>
                </tr>
                <tr>
                    <th class="text-nowrap" scope="row">Payable Amount</th>
                    <td><%= table[0].order_amount %></td>
                </tr>
                <tr>
                    <th class="text-nowrap" scope="row">Order Status</th>
                    <td><%= table[0].order_status %></td>
                </tr>
                <tr>
                    <td>
                        <form method="post" action="/order/cancel">
                            <input type="hidden" name="order_id" value="<%= table[0].order_id %>">
                            <% if (table[0].order_status !== 'canceled' && table[0].order_status !== 'done') { %>
                                <button class="btn btn-warning" type="submit">Cancel Order</button>
                            <% } else { %>
                                <button disabled class="btn btn-warning disabled" type="submit">Cancel Order</button>
                            <% } %>
                        </form>
                    </td>
                    <td>
                        <form method="post" action="/order/delete">
                            <input type="hidden" name="order_id" value="<%= table[0].order_id %>">
                            <% if (table[0].order_status === 'pending' || table[0].order_status !== 'done' ) { %>
                            <button class="btn btn-danger" type="submit">Delete Order</button>
                            <% } else { %>
                                <button disabled class="btn btn-danger disabled" type="submit">Delete Order</button>
                            <% } %>
                        </form>
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</div>
    <% include ../footer.ejs %>
</body>
</html>
